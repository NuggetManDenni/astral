<body>

  <div id="controls">
    <input type="text" id="urlInput" placeholder="Enter website URLâ€¦" />
    <button onclick="loadPreview()">Preview</button>
    <button onclick="toggleFullscreen()">Toggle Fullscreen</button>
    <button onclick="zoomIn()">Zoom In</button>
    <button onclick="zoomOut()">Zoom Out</button>
  </div>

  <iframe id="previewFrame" src=""></iframe>

  <script>
    let zoomLevel = 1;

    function loadPreview() {
      const url = document.getElementById('urlInput').value;
      document.getElementById('previewFrame').src = url;
    }

    function toggleFullscreen() {
      const iframe = document.getElementById('previewFrame');
      if (!document.fullscreenElement) {
        iframe.requestFullscreen().catch(err => console.log(err));
      } else {
        document.exitFullscreen();
      }
    }

    function zoomIn() {
      zoomLevel += 0.1;
      updateZoom();
    }

    function zoomOut() {
      zoomLevel = Math.max(0.1, zoomLevel - 0.1);
      updateZoom();
    }

    function updateZoom() {
      document.getElementById('previewFrame').style.transform = `scale(${zoomLevel})`;
    }
  </script>

</body>
